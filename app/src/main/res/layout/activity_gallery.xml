<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="funia.maker.pip.picjoke.scopic.activity.GalleryActivity">

    <RelativeLayout
        android:id="@+id/rl_bottom_gallery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom_gallery"
        android:background="@android:color/background_dark" />

    <ImageButton
        android:id="@+id/imb_back_gallery"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/item_imb_main"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back" />

</RelativeLayout>
