<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingLeft="12.0dip"
    android:paddingRight="12.0dip"
    android:paddingBottom="50.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_alert_dialog_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/font_dialog_alert_title"
            android:id="@+id/tv_title"
            android:paddingLeft="24.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="24.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="37.0dip"
            android:text="Alert" />
        <View
            android:id="@+id/stroke_title_bottom"
            android:background="@color/stroke_dialog_divid"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/font_dialog_alert_message"
            android:gravity="center"
            android:id="@+id/tv_message"
            android:paddingLeft="24.0dip"
            android:paddingTop="20.0dip"
            android:paddingRight="24.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="87.0dip"
            android:text="Message..." />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="@color/pic_joke_white"
            android:id="@+id/button_negative"
            android:background="@drawable/bg_alert_dialog_button_left" android:layout_width="0.0dip" android:layout_height="wrap_content" android:minHeight="44.0dip" android:text="NO" android:layout_weight="1.0" />
        <View
            android:background="@color/pic_joke_white"
            android:layout_width="2.0dip"
            android:layout_height="fill_parent"
            android:minHeight="44.0dip" />
        <Button
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="@color/pic_joke_white"
            android:id="@+id/button_positive"
            android:background="@drawable/bg_alert_dialog_button_right" android:layout_width="0.0dip" android:layout_height="wrap_content" android:minHeight="44.0dip" android:text="YES" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>